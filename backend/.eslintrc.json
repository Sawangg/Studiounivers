{
    "root": true,
    "env": {
        "node": true,
        "jest": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["warn", { "endOfLine": "auto" }, { "usePrettierrc": true }]
    }
}
